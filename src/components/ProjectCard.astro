---
const allPosts = await Astro.glob('../pages/projects/*.md');
---


{allPosts.map((project) =>
    <div class="card">
        <a href={project.url}>
        
            <div class="card-image">
                <img src={project.frontmatter.image.src} alt={project.frontmatter.image.alt}>
                <div class="card-caption">
                    <h2>View Project</h2>
                </div>
            </div>
            
            {/* <p>{project.frontmatter.tags}</p> */}

            <h1>{project.frontmatter.title}</h1>
            <p>{project.frontmatter.description}</p>
        </a>
        <div class="tags">
        {project.frontmatter.tags.map((tag) => (
        <p class="tag">{tag}</p>
      ))}
    </div>
    </div>
)}

{/* <div class="tags">
      {frontmatter.tags.map((tag) => (
        <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
      ))}
    </div> */}

<style>
    .card {
        width: 100%;
        height: auto;
        background-color: #ccc;
        border-radius: 16px;
    }

    .card-image {
        height: 100%;
        position: relative;
        overflow: hidden;
    }

    .card-image img {
        width: 100%;
        height: 100%;
    }

    .card h1 {
        color: #343434; 
    }

    .card a {
        text-decoration: none;
    }

    .card-caption {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        background-color: black;
        opacity: 80%;
        transform: translateY(100%);
        transition: 0.5s;
    }

    .card-image:hover .card-caption {
        transform: translateY(0);
    }
</style>

