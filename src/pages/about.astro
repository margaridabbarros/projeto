---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import Buttons from '../components/Buttons.astro'
import WorkExperience from '../components/WorkExperience.astro';
import Education from '../components/Education.astro';
const pageTitle = "About Me";
---

<BaseLayout pageTitle={pageTitle}>
  
  <section class="page">
    <section class="profile">
      <h1 class="intro">{pageTitle}</h1>
   
      <figure class="profile">
        <img src="/img/Margarida_Barros.png" alt="" class="profile">
      </figure>
    
      <h2 class="profile">I'm Margarida Barros</h2>
      <p class="profile">As a Mechanical Engineer who transitioned into the field of Design, I am passionate about creating user-centric designs that are both aesthetically pleasing and functional.  I am thrilled to be a part of the UX/UI field, where I can continue to learn and grow my skills. I am constantly seeking out new challenges and opportunities to push the boundaries.</p>
    
      <Buttons />
    </section>
  
    <section class="experience">
      <WorkExperience />
    </section>

    <section class="experience">
      <Education />
    </section>

  </section>
  
</BaseLayout>

