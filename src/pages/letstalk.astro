---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "Let's Talk";
---
<BaseLayout pageTitle={pageTitle}>
    
    <section class="page">
        <h1>{pageTitle}</h1>

        <section>
            <h2 class="letstalk">Contact Info</h2>
            <p class="letstalk">mbcsbarros@gmail.com</p>
        </section>

        <section>
            <h2 class="letstalk">Social</h2>
            <a href="https://www.behance.net/margaridabbarros" class="letstalk">Behance</a>
            <a href="https://www.linkedin.com/in/margaridabarros/" class="letstalk">LinkedIn</a>
        </section>


        <section>
            <form action="https://api.web3forms.com/submit" method="POST">
            
                <input type="hidden" name="access_key" value="b8b1d1fa-9266-4f43-bc6a-c1e7d9d40d83">

                <label for="name">Name</label>
                <input type="text" id="name" name="name" placeholder="Enter your name">
        
                <label for="email">Email Address</label>
                <input type="text" id="email" name="email" placeholder="Enter your email">

                <label for="message">Message</label>
                <textarea id="message" name="message" placeholder="Type your message"></textarea>
                
                <input type="submit" value="Send Message">
            </form>
        </section>


    </section>    
  


</BaseLayout>