---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import Buttons from '../components/Buttons.astro'
import SliderImages from '../components/SliderImages.astro';
import ProjectCard from '../components/ProjectCard.astro';
import WorkExperience from '../components/WorkExperience.astro';
import Education from '../components/Education.astro';
const pageTitle = "Home Page";
---
<BaseLayout>
  
  <section class="page">
    <section class="intro">
      <div>
        <h1 class="intro">Hi, I'm Margarida </h1>
        <h2 class="intro">An Engineer with a strong passion for Design.</h2>
      </div>
      
      <section class="wrapper">
        <div class="slider">
          <SliderImages />
        </div>
      </section>
      
      <Buttons />
  
    </section>
  
    <section class="projects">
      <h1>Projects</h1>
      <div class="cards">
        <ProjectCard />
      </div>
    </section>
  
    <section class="experience">
      <WorkExperience />
    </section>

    <section class="experience">
      <Education />
    </section>

  </section>
  

</BaseLayout>
